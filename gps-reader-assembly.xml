<assembly>
	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory />
			<includes>
				<include>**/*.jar</include>
				<include>**/*.bat</include>
				<include>**/*.exe</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>

		<file>
			<source>${basedir}/src/main/resources/log/log.config</source>
		</file>
		<file>
			<source>${basedir}/src/main/resources/launcher/run.bat</source>
		</file>
	</files>
	
	<dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <includes>
        <include>org.bidib.jbidib.org.qbang.rxtx:rxtxcomm</include>
        <include>de.taimos:gpsd4java</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>